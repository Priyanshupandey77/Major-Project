<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    overflow-x: auto;
    gap: 1.5rem;
    padding: 1rem;
    scroll-behavior: smooth;
    scroll-snap-type: x mandatory;
  }
  #filters::-webkit-scrollbar {
    height: 6px;
  }
  #filters::-webkit-scrollbar-thumb {
    background-color: #ccc;
    border-radius: 10px;
  }
  #filters::-webkit-scrollbar-track {
    background: transparent;
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    padding: 1rem;
    opacity: 0.7;
    scroll-snap-align: start;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    flex: 0 0 auto;
    white-space: nowrap;
    border: 2px solid black;
    border-radius: 1rem;
    padding: 0.5rem;
    background-color: #d0c4c4;
  }

  .form-check-label{
    color: rgb(255, 0, 0);
  }
</style>

<div id="filters" class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic cities</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-water-ladder"></i></div>
    <p>Amazing pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-water"></i></div>
    <p>Surfing</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-house-laptop"></i></div>
    <p>Cabins</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-snowman"></i></div>
    <p>Arctic</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        ><b>Display total after taxes</b></label
      >
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListing) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image?.url || '/css/image/villaimage.jpg' %> "
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#x20B9;<%= (listing.price || 0).toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp;+&nbsp;18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
